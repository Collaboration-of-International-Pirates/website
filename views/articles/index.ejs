<!DOCTYPE html>
<html class="hfeed">
  <head>
    <title>Article List</title>
    <link rel="stylesheet" type="text/css" href="/styles/style.css" />
    <link rel="stylesheet" type="text/css" href="/styles/article_list.css" />
    <link rel="icon" href="/media/PP.svg" />
  </head>
  <body>
    <% include ../partials/header %>
    <h1 class="title">Recent Articles</h1>
    <main>
      <section class="hfeed">
        <ul class="hfeed__entry-list">
          <% articles.forEach(function(article, index) { %>
          <li class="hentry">
            <h3 class="entry-title">
              <a href="/articles/<%= article.filename %>"
                ><%= article.title %></a
              >
            </h3>
            <div class="entry-summary">
              <img
                class="entry-image"
                src="<%= article.imageUrl %>"
                alt="<%= article.imageAlt %>"
              />
              <p><%= article.summary %></p>
            </div>
            <div class="entry-metadata">
              <p>Keywords: <%= article.tags %></p>
            </div>
          </li>
          <% if (index === pageSize - 1 && articles.length > pageSize) { %>
          <link rel="next" href="/articles?page=<%= page + 1 %>" />
          <% } else if (index === articles.length - 1 && page > 1) { %>
          <link rel="prev" href="/articles?page=<%= page - 1 %>" />
          <% } %> <% }); %>
        </ul>
      </section>
      <% if (page > 1) { %>
      <a href="/articles?page=<%= page - 1 %>" class="prev-page">Prev</a>
      <% } %> <% if (articles.length > pageSize) { %>
      <a href="/articles?page=<%= page + 1 %>" class="next-page">Next</a>
      <% } %>
    </main>
    <% include ../partials/footer %>
  </body>
</html>
